#include <stdint.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif


// MACROS

// ADC Base: 0x4001 2000
#define ADC_Base_ADDR				0x40012000UL
// ADC1 Address offset: 0x04
#define ADC_CR1_REG_OFFSET			0x04UL
// ADC_CR1_REG_ADDR = Base_ADDR + OFFSET = 0x4001 2000 + 0x04 = 0x4001 2004
#define ADC_CR1_REG_ADDR			((ADC_Base_ADDR) + (ADC_CR1_REG_OFFSET))

// RCC Base
#define RCC_Base_ADDR				0x40023800UL
// RCC APB Enable
#define RCC_APB2ENR_OFFSET			0x44UL
#define RCC_APB2ENR_REG_ADDR		((RCC_Base_ADDR) + (RCC_APB2ENR_OFFSET))


int main(void)
{
	uint32_t *pRccApb2EnR = (uint32_t*) RCC_APB2ENR_REG_ADDR;
	uint32_t *pAdcCr1Reg = (uint32_t*) ADC_CR1_REG_ADDR;

	// Enable AdcCr1 through the 8th bit of Apb2EnR
	*pRccApb2EnR |= (1 << 8);

	// Set the 8th bit
	*pAdcCr1Reg |= (1 << 8);


    /* Loop forever */
	for(;;);
}
